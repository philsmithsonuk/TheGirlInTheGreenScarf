<script type="text/javascript">
	//<![CDATA[
	<?php if(false): ?>
	var bagStatusAnimating = false;
	var bagStatusTmId = null;
	document.observe("dom:loaded", function(){
		$('shop-bag').observe('click', function(e,el) {
			if (bagStatusAnimating) {
				return false;
			}
			if (el = e.findElement('.status')) {
				if(el.hasClassName('show')){
					Effect.SlideUp('header-bag-items', { duration: 0.5, 
						beforeStart: function(){
							bagStatusAnimating = true;
						},
						afterFinish: function(){
							bagStatusAnimating = false;
						}
					});
				} else {
					Effect.SlideDown('header-bag-items', { duration: 0.5,
						beforeStart: function(){
							bagStatusAnimating = true;
						},
						afterFinish: function(){
							bagStatusAnimating = false;
							if (bagStatusTmId) {
								window.clearTimeout(bagStatusTmId);
							}
							bagStatusTmId = Effect.SlideUp.delay(4,'header-bag-items', { duration: 0.5, 
								beforeStart: function(){
									bagStatusAnimating = true;
								},
								afterFinish: function(){
									bagStatusAnimating = false;
									$('header-bag-status').toggleClassName('show');
								}
							});
						}
					});
				}
				el.toggleClassName('show');
				e.stop();
			}
			if (el = e.findElement('.btn-close')) {
				Effect.SlideUp('header-bag-items', { duration: 0.5,
					beforeStart: function(){
						bagStatusAnimating = true;
					},
					afterFinish: function(){
						bagStatusAnimating = false;
						if (bagStatusTmId) {
							window.clearTimeout(bagStatusTmId);
						}
					}
				});
				$('header-bag-status').removeClassName('show');
				e.stop();
			}
		});
		
		$('header-bag-items').observe('mouseover', function() {
			if (bagStatusTmId) {
				window.clearTimeout(bagStatusTmId);
			}
		});

		$('header-bag-items').observe('mouseout', function() {
			if ($('header-bag-status').hasClassName('show')) {
				bagStatusTmId = Effect.SlideUp.delay(4,'header-bag-items', { duration: 0.5, 
					beforeStart: function(){
						bagStatusAnimating = true;
					},
					afterFinish: function(){
						bagStatusAnimating = false;
						if (bagStatusTmId) {
							window.clearTimeout(bagStatusTmId);
						}
						$('header-bag-status').toggleClassName('show');
					}
				});
			}
		});

	});
	<?php endif; ?>
	//]]>
</script>
