			<version>1.6.0.0</version>
		</GreenScarf_Page>
	</modules>
	<global>
		<page>
			<layouts>
				<gs_one_column module="page" translate="label">
					<label>1 Column (TGITGS)</label>
					<template>page/gs-1column.phtml</template>
					<layout_handle>gs_one_column</layout_handle>
				</gs_one_column>
				<gs_two_columns module="page" translate="label">
