				</gs_two_columns_right>
				<gs_two_columns_left module="page" translate="label">
					<label>2 Columns Right(TGITGS)</label>
					<template>page/gs-2columns-left.phtml</template>
					<layout_handle>gs_two_columns_left</layout_handle>
				</gs_two_columns_left>
				<gs_three_columns module="page" translate="label">
					<label>3 Columns (TGITGS)</label>
					<template>page/gs-3columns.phtml</template>
